---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Contact Us - Get a Free Consultation | DC technolabs Ahmedabad"
  description="Get in touch with DC technolabs for web design, development, SEO, and PPC services in Ahmedabad. Call +91 96626-08986 or email hello@dctechnolabs.com"
>
  <Header />
  
  <div style="height: 80px;"></div>
  
  <!-- Hero -->
  <section class="page-hero">
    <div class="container">
      <h1>Get In Touch</h1>
      <p class="hero-subtitle">Let's discuss how we can help grow your business online</p>
    </div>
  </section>
  
  <!-- Contact Section -->
  <section class="section contact-section">
    <div class="container">
      <div class="contact-grid">
        <!-- Contact Form -->
        <div class="contact-form-wrapper">
          <h2>Send Us a Message</h2>
          <p>Fill out the form below and we'll get back to you within 24 hours.</p>
          
          <form class="contact-form" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
            <div class="form-group">
              <label for="name">Full Name *</label>
              <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" required>
              </div>
              
              <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone">
              </div>
            </div>
            
            <div class="form-group">
              <label for="service">Service Interested In *</label>
              <select id="service" name="service" required>
                <option value="">Select a service</option>
                <option value="web-design">Web Design</option>
                <option value="web-development">Web Development</option>
                <option value="seo">SEO Services</option>
                <option value="ppc">PPC Management</option>
                <option value="ecommerce">E-commerce Development</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message">Tell Us About Your Project *</label>
              <textarea id="message" name="message" rows="6" required></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary btn-large">Send Message</button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class="contact-info">
          <div class="info-card">
            <div class="info-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <h3>Call Us</h3>
            <p>Mon-Sat, 9 AM - 6 PM</p>
            <a href="tel:+919662608986" class="contact-link">+91 96626-08986</a>
          </div>
          
          <div class="info-card">
            <div class="info-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <h3>Email Us</h3>
            <p>We'll respond within 24 hours</p>
            <a href="mailto:hello@dctechnolabs.com" class="contact-link">hello@dctechnolabs.com</a>
          </div>
          
          <div class="info-card">
            <div class="info-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <h3>Visit Us</h3>
            <p>Sanik Society, B-18, Vinzol Rd<br>near Urmi Jeevan Society<br>Vatva, Ahmedabad<br>Gujarat 382445</p>
          </div>
          
          <div class="info-card whatsapp-card">
            <div class="info-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </div>
            <h3>WhatsApp</h3>
            <p>Quick response guaranteed</p>
            <a href="https://wa.me/919662608986" class="contact-link" target="_blank" rel="noopener">Chat on WhatsApp</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Map Section -->
  <section class="map-section">
    <div class="container">
      <h2 class="section-title">Find Us on Map</h2>
      <div class="map-container">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3672.4962867890945!2d72.63224931496788!3d22.97341918500796!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e85da5e577777%3A0x0!2zMjLCsDU4JzI0LjMiTiA3MsKwMzgnMDQuNyJF!5e0!3m2!1sen!2sin!4v1234567890123"
          width="100%" 
          height="450" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          title="DC technolabs Location">
        </iframe>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>

<style>
  .page-hero {
    padding: 4rem 0 3rem;
    background: linear-gradient(135deg, var(--bg-dark) 0%, var(--secondary-light) 100%);
    color: white;
    text-align: center;
  }
  
  .page-hero h1 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }
  
  .contact-section {
    padding: 5rem 0;
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
    align-items: start;
  }
  
  .contact-form-wrapper h2 {
    margin-bottom: 1rem;
  }
  
  .contact-form-wrapper > p {
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }
  
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .form-group label {
    font-weight: 600;
    color: var(--text-primary);
    font-size: 0.95rem;
  }
  
  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.875rem 1rem;
    border: 2px solid var(--border);
    border-radius: 0.5rem;
    font-size: 1rem;
    font-family: inherit;
    transition: all 0.3s ease;
  }
  
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }
  
  .form-group textarea {
    resize: vertical;
  }
  
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .info-card {
    background: var(--bg-secondary);
    padding: 2rem;
    border-radius: 1rem;
    border-left: 4px solid var(--primary);
  }
  
  .whatsapp-card {
    background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
    color: white;
    border-left-color: white;
  }
  
  .info-icon {
    width: 60px;
    height: 60px;
    background: white;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    color: var(--primary);
  }
  
  .whatsapp-card .info-icon {
    background: rgba(255, 255, 255, 0.2);
    color: white;
  }
  
  .info-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }
  
  .whatsapp-card h3 {
    color: white;
  }
  
  .info-card p {
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
    font-size: 0.95rem;
  }
  
  .whatsapp-card p {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .contact-link {
    display: inline-block;
    color: var(--primary);
    font-weight: 600;
    font-size: 1.125rem;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .whatsapp-card .contact-link {
    color: white;
  }
  
  .contact-link:hover {
    color: var(--primary-dark);
  }
  
  .whatsapp-card .contact-link:hover {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .map-section {
    padding: 3rem 0 5rem;
    background: var(--bg-secondary);
  }
  
  .section-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  
  .map-container {
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }
  
  @media (max-width: 968px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>
