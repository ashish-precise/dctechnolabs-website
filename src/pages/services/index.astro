  <CtaBanner
    title="Ready to Grow Your Business Online?"
    subtitle="Tell us which services interest you and we'll put together a custom plan that fits your budget and your goals."
  />
</PageLayout>

<style>
/* ---- HERO ---- */
.svc-hub-hero {
  padding: 120px 0 clamp(3rem, 6vw, 5rem);
  background: linear-gradient(170deg, var(--white) 0%, var(--blue-50) 50%, var(--white) 100%);
  position: relative;
  overflow: hidden;
}
.svc-hub-hero::before {
  content: '';
  position: absolute;
  top: -200px;
  right: -200px;
  width: 600px;
  height: 600px;
  background: radial-gradient(circle, rgba(59,130,246,.06) 0%, transparent 70%);
  border-radius: 50%;
}
.svc-hub-hero-inner {
  max-width: 700px;
  position: relative;
  z-index: 1;
}
.svc-hub-hero h1 {
  font-size: clamp(2.25rem, 4.5vw, 3.5rem);
  letter-spacing: -.03em;
  line-height: 1.1;
  margin-bottom: 1rem;
  margin-top: .75rem;
}
.svc-hub-hero h1 .highlight {
  background: linear-gradient(135deg, var(--blue-600), var(--blue-400));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
.svc-hub-hero p {
  font-size: 1.1rem;
  color: var(--gray-500);
  line-height: 1.75;
  max-width: 560px;
}
.svc-hub-hero-stats {
  display: flex;
  gap: 0;
  margin-top: 2rem;
  align-items: center;
}
.svc-hub-hero-stat {
  border-right: 1.5px solid var(--gray-200);
  padding-right: 2.5rem;
  margin-right: 2.5rem;
}
.svc-hub-hero-stat:last-child {
  border-right: none;
  padding-right: 0;
  margin-right: 0;
}
.svc-hub-hero-stat strong {
  font-family: var(--font-display);
  font-size: 1.5rem;
  font-weight: 800;
  color: var(--blue-600);
  display: block;
}
.svc-hub-hero-stat span {
  font-size: .9rem;
  color: var(--gray-400);
}

/* ---- SERVICE CARDS ---- */
.svc-hub-cards {
  padding: var(--section-pad) 0;
  background: var(--white);
}
.svc-hub-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1.5rem;
}
.svc-hub-card {
  border-radius: var(--radius-lg);
  overflow: hidden;
  border: 1.5px solid var(--gray-100);
  background: var(--white);
  transition: all .4s var(--ease);
  display: flex;
  flex-direction: column;
  color: inherit;
}
.svc-hub-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 24px 60px rgba(0,0,0,.08);
  border-color: var(--blue-200);
}
.svc-hub-card-visual {
  height: 140px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.svc-hub-card-body {
  padding: 1.5rem;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.svc-hub-card-body h3 {
  font-size: 1.1rem;
  margin-bottom: .35rem;
}
.svc-hub-card-body > p {
  font-size: .9rem;
  color: var(--gray-500);
  line-height: 1.6;
  margin-bottom: .75rem;
  flex: 1;
}
.svc-hub-card-price {
  font-family: var(--font-display);
  font-size: .85rem;
  font-weight: 600;
  color: var(--blue-600);
  margin-bottom: 1rem;
}
.svc-hub-card-link {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-family: var(--font-display);
  font-size: .9rem;
  font-weight: 600;
  color: var(--blue-600);
  transition: gap .3s var(--ease);
}
.svc-hub-card:hover .svc-hub-card-link {
  gap: 12px;
}

/* ---- WHY IT MATTERS ---- */
.approach {
  padding: var(--section-pad) 0;
  background: var(--white);
}
.approach-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}
.approach-points {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}
.approach-point {
  display: flex;
  gap: 16px;
  align-items: flex-start;
}
.check-circle {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: var(--blue-600);
  color: var(--white);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}
.approach-point h3 {
  font-size: 1.05rem;
  margin-bottom: .3rem;
}
.approach-point p {
  font-size: .95rem;
  color: var(--gray-500);
  line-height: 1.65;
}

/* ---- ENGAGEMENT STEPS ---- */
.engagement-steps {
  position: relative;
  padding-top: 2rem;
}
.engagement-line {
  position: absolute;
  top: calc(2rem + 28px);
  left: 50%;
  transform: translateX(-50%);
