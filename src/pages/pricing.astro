---
import PageLayout from '../layouts/PageLayout.astro';

const title = "Pricing & Packages | Transparent Digital Marketing Prices | DC technolabs Ahmedabad";
const description = "Transparent pricing for web design, SEO, PPC, and e-commerce services. No hidden fees, no vague 'contact us for pricing'. Fixed prices for every package.";
const canonical = "https://dctechnolabs.in/pricing";

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Are these prices all-inclusive or are there additional costs?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The prices listed are our management/delivery fees. For PPC, ad spend is paid directly to Google. For Social Media Authority package, Meta Ads spend is separate. No hidden setup fees or onboarding charges."
      }
    },
    {
      "@type": "Question",
      "name": "Do you offer discounts for bundling multiple services?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Clients taking 2 or more services get bundled pricing with shared onboarding and unified reporting. Ask us for a bundled quote."
      }
    },
    {
      "@type": "Question",
      "name": "Can I upgrade or downgrade my package?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Upgrade anytime (effective next billing month). Downgrade with 30 days notice once your minimum commitment period is complete."
      }
    },
    {
      "@type": "Question",
      "name": "What payment terms do you offer?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "One-time projects: 50% upfront, 50% on delivery. Monthly retainers: full month in advance, due on the 1st. Bank transfer and UPI accepted. GST invoice provided immediately."
      }
    },
    {
      "@type": "Question",
      "name": "Do you offer a money-back guarantee?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "For one-time projects, unlimited revisions within agreed scope. For monthly services, if we don't deliver what's promised, next month is at 50% fee."
      }
    },
    {
      "@type": "Question",
      "name": "Are prices the same for Surat and Vadodara clients?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. No out-of-city premium, no travel surcharge. Same price regardless of your city."
      }
    },
    {
      "@type": "Question",
      "name": "What's included in the post-launch support period?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Bug fixes, minor content updates (text changes, image swaps), and technical questions. Major new features or pages are scoped separately."
      }
    },
    {
      "@type": "Question",
      "name": "Can I pay in installments for larger projects?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Projects above Rs. 1 lakh get 3-part payment: 40% on start, 30% at design approval, 30% on delivery."
      }
    }
  ]
};
---

<PageLayout title={title} description={description} canonical={canonical}>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <style>
    /* PRICING PAGE v3 */
    .pricing-hero {
      padding: 120px 0 80px;
      background: linear-gradient(170deg, var(--white) 0%, var(--blue-50) 50%, var(--white) 100%);
      position: relative;
      overflow: hidden;
      min-height: 420px;
      display: flex;
      align-items: center;
    }
    .pricing-hero-inner {
      max-width: 780px;
      position: relative;
      z-index: 1;
    }
    .pricing-hero h1 {
      font-size: clamp(2.25rem, 4.5vw, 3.5rem);
      letter-spacing: -0.03em;
      line-height: 1.1;
      margin-bottom: 1.25rem;
    }
    .pricing-hero h1 .highlight {
      background: linear-gradient(135deg, var(--blue-600), var(--blue-400));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    .pricing-hero p {
      font-size: 1.15rem;
      color: var(--gray-500);
      line-height: 1.75;
      max-width: 620px;
      margin-bottom: 1.5rem;
    }
    .pricing-hero-trust {
      display: flex;
      flex-wrap: wrap;
      gap: 1.5rem;
      font-size: 0.875rem;
      color: var(--gray-500);
    }
    .pricing-hero-trust span {
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }
    .pricing-hero-trust svg { color: var(--blue-600); }

    /* TABS SECTION */
    .pricing-tabs-section {
      padding: 1.5rem 0;
      background: var(--white);
      border-bottom: 1px solid var(--gray-100);
    }
    .pricing-tabs {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
      justify-content: center;
    }
    .ptab {
      padding: 0.5rem 1.25rem;
      border-radius: 100px;
      border: 1.5px solid var(--gray-200);
      background: var(--white);
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--gray-600);
      cursor: pointer;
      transition: all 0.2s var(--ease);
      font-family: var(--font-display);
    }
    .ptab:hover,
    .ptab.active {
      border-color: var(--blue-600);
      background: var(--blue-600);
      color: var(--white);
    }

    /* PRICING TIERS SECTION */
    .pricing-tiers-section { padding: var(--section-pad) 0; }
    .pricing-panel { display: none; }
    .pricing-panel.active { display: block; }
    .pricing-panel-header { max-width: 640px; margin-bottom: 3rem; }
    .pricing-panel-header h2 { font-size: clamp(1.5rem, 3vw, 2rem); margin-bottom: 0.75rem; }
    .pricing-panel-header p { font-size: 1rem; color: var(--gray-500); line-height: 1.7; }

    /* TIERS */
    .pricing-tiers {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      align-items: stretch;
    }
    .pricing-tier {
      background: var(--white);
      border: 1.5px solid var(--gray-100);
      border-radius: var(--radius-lg);
      padding: 2.5rem;
      position: relative;
      display: flex;
      flex-direction: column;
      transition: all 0.3s var(--ease);
    }
    .pricing-tier:hover { box-shadow: 0 16px 48px rgba(0,0,0,0.06); }
    .pricing-tier--featured {
      border-color: var(--blue-400);
      box-shadow: 0 0 0 4px rgba(37,99,235,0.06);
    }
    .pricing-tier--featured:hover {
      box-shadow: 0 0 0 4px rgba(37,99,235,0.08), 0 20px 60px rgba(37,99,235,0.12);
    }
    .tier-badge {
      position: absolute;
      top: -14px;
      left: 50%;
      transform: translateX(-50%);
      background: linear-gradient(135deg, var(--blue-600), var(--blue-500));
      color: var(--white);
      font-size: 0.75rem;
      font-weight: 700;
      padding: 4px 16px;
      border-radius: 100px;
      white-space: nowrap;
    }
    .tier-header { margin-bottom: 1rem; }
    .tier-name {
      font-size: 0.8rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: var(--gray-400);
    }
    .tier-price {
      font-family: var(--font-display);
      font-size: 2.5rem;
      font-weight: 900;
      color: var(--gray-900);
      line-height: 1.1;
      margin: 0.4rem 0 0.25rem;
    }
    .tier-slash { font-size: 1.1rem; font-weight: 500; color: var(--gray-500); }
    .tier-period { font-size: 0.8rem; color: var(--gray-400); }
    .tier-best-for {
      font-size: 0.8rem;
      color: var(--gray-500);
      background: var(--gray-50);
      border-radius: var(--radius-sm, 8px);
      padding: 0.6rem 0.9rem;
      margin-bottom: 1.5rem;
      line-height: 1.5;
    }
    .tier-features {
      list-style: none;
      padding: 0;
      margin: 0 0 2rem;
      flex: 1;
    }
    .tier-features li {
      font-size: 0.875rem;
      color: var(--gray-600);
      padding: 0.45rem 0;
      border-bottom: 1px solid var(--gray-50);
      line-height: 1.5;
    }
    .tier-features li:last-child { border-bottom: none; }
    .pricing-tier .btn { width: 100%; text-align: center; margin-top: auto; }

    /* ALWAYS INCLUDED CARDS */
    .always-included { padding: var(--section-pad) 0; background: var(--blue-50); }
    .ai-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; }
    .ai-card {
      background: var(--white);
      border-radius: var(--radius-lg);
      padding: 2rem;
      border: 1px solid var(--blue-100);
      text-align: center;
      transition: all 0.3s var(--ease);
    }
    .ai-card:hover { transform: translateY(-4px); box-shadow: 0 12px 36px rgba(0,0,0,0.06); }
    .ai-card-icon { font-size: 2rem; margin-bottom: 0.75rem; }
    .ai-card h3 { font-size: 0.95rem; margin-bottom: 0.5rem; }
    .ai-card p { font-size: 0.875rem; color: var(--gray-500); line-height: 1.65; }

    /* COMPARISON TABLE */
    .comparison { padding: var(--section-pad) 0; }
    .comparison-table-wrap { overflow-x: auto; }
    .comparison-table { width: 100%; border-collapse: collapse; min-width: 600px; }
    .comparison-table th,
    .comparison-table td {
      padding: 1rem 1.25rem;
      text-align: left;
      font-size: 0.9rem;
      border-bottom: 1px solid var(--gray-100);
    }
    .comparison-table th {
      font-weight: 700;
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--gray-500);
      background: var(--gray-50);
    }
    .comparison-table .col-us { background: rgba(37,99,235,0.04); }
    .comparison-table th.col-us { color: var(--blue-700); background: rgba(37,99,235,0.08); }
    .comparison-table tr:last-child td { border-bottom: none; }
    .comparison-table tbody tr:hover td { background: var(--gray-50); }
    .comparison-table tbody tr:hover .col-us { background: rgba(37,99,235,0.06); }

    /* BUNDLES */
    .bundles { padding: var(--section-pad) 0; background: var(--gray-50); }
    .bundles-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; }
    .bundle-card {
      background: var(--white);
      border-radius: var(--radius-lg);
      padding: 2rem;
      border: 1.5px solid var(--gray-100);
      transition: all 0.3s var(--ease);
    }
    .bundle-card:hover { border-color: var(--blue-200); transform: translateY(-4px); box-shadow: 0 12px 36px rgba(0,0,0,0.06); }
    .bundle-badge {
      display: inline-flex;
      padding: 4px 14px;
      background: var(--blue-50);
      border-radius: var(--radius-full);
      font-family: var(--font-display);
      font-size: 0.8rem;
      font-weight: 700;
      color: var(--blue-700);
      margin-bottom: 1rem;
    }
    .bundle-card h3 { font-size: 1.2rem; margin-bottom: 0.5rem; }
    .bundle-card-services { font-size: 0.9rem; color: var(--gray-400); margin-bottom: 1rem; }
    .bundle-card-price { font-family: var(--font-display); font-size: 1.5rem; font-weight: 800; color: var(--blue-600); margin-bottom: 0.15rem; }
    .bundle-card-savings { font-size: 0.85rem; color: #16a34a; font-weight: 600; margin-bottom: 1.25rem; }
    .bundle-result {
      padding: 10px 14px;
      border-left: 3px solid var(--blue-600);
      background: var(--blue-50);
      border-radius: 0 var(--radius) var(--radius) 0;
      font-size: 0.85rem;
      color: var(--blue-700);
    }

    /* INCLUDED FREE LIST */
    .included-section { padding: var(--section-pad) 0; }
    .included-list { max-width: 800px; margin: 0 auto; }
    .il-item {
      display: flex;
      align-items: flex-start;
      gap: 14px;
      padding: 1rem 0;
      border-bottom: 1px solid var(--gray-100);
    }
    .il-item:last-child { border-bottom: none; }
    .il-check {
      width: 24px;
      height: 24px;
      border-radius: 50%;
      background: var(--blue-600);
      color: var(--white);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      margin-top: 2px;
    }
    .il-item h3 { font-size: 1rem; margin-bottom: 0.15rem; }
    .il-item p { font-size: 0.9rem; color: var(--gray-500); line-height: 1.6; }

    /* GUARANTEES DARK */
    .guarantees { padding: var(--section-pad) 0; background: var(--gray-900); color: var(--white); }
    .guarantees .section-label { color: var(--blue-300); }
    .guarantees .section-label::before { background: var(--blue-400); }
    .guarantees .section-title { color: var(--white); }
    .guarantees .section-subtitle { color: var(--gray-400); }
    .guarantees-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; }
    .guarantee-card {
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: var(--radius-lg);
      padding: 2rem;
      text-align: center;
      transition: all 0.3s var(--ease);
    }
    .guarantee-card:hover { background: rgba(255,255,255,0.08); border-color: rgba(255,255,255,0.15); }
    .guarantee-card-icon { font-size: 2rem; margin-bottom: 1rem; }
    .guarantee-card h3 { font-size: 1.1rem; color: var(--white); margin-bottom: 0.5rem; }
    .guarantee-card p { font-size: 0.9rem; color: var(--gray-400); line-height: 1.65; }

    /* TESTIMONIALS */
    .testimonials-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; }
    .testimonial-card {
      background: var(--gray-50);
      border-radius: var(--radius-lg);
      padding: 2rem;
      border: 1px solid var(--gray-100);
      transition: all 0.3s var(--ease);
    }
    .testimonial-card:hover { border-color: var(--blue-200); box-shadow: 0 8px 30px rgba(0,0,0,0.05); }
    .testimonial-stars { display: flex; gap: 2px; margin-bottom: 1rem; }
    .testimonial-stars svg { width: 18px; height: 18px; color: var(--accent); }
    .testimonial-text { font-size: 0.95rem; color: var(--gray-600); line-height: 1.75; margin-bottom: 1.5rem; font-style: italic; }
    .testimonial-author { display: flex; align-items: center; gap: 12px; }
    .testimonial-avatar {
      width: 44px; height: 44px; border-radius: 50%;
      background: linear-gradient(135deg, var(--blue-200), var(--blue-400));
      display: flex; align-items: center; justify-content: center;
      font-family: var(--font-display); font-weight: 700; font-size: 0.9rem; color: var(--white);
      flex-shrink: 0;
    }
    .testimonial-name { font-family: var(--font-display); font-weight: 700; font-size: 0.9rem; color: var(--gray-900); }
    .testimonial-role { font-size: 0.85rem; color: var(--gray-400); }

    /* NOT SURE */
    .pns-inner { max-width: 700px; margin: 0 auto; text-align: center; display: flex; flex-direction: column; align-items: center; }
    .pns-inner h2 { font-size: clamp(1.5rem, 3vw, 2rem); margin-bottom: 1rem; }
    .pns-inner p { font-size: 1rem; color: var(--gray-500); line-height: 1.7; margin-bottom: 2rem; }
    .pns-btns { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }

    /* FAQ */
    .faq-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; max-width: 960px; margin: 0 auto; }
    .faq-item {
      border: 1.5px solid var(--gray-100);
      border-radius: var(--radius);
      overflow: hidden;
      transition: all 0.3s var(--ease);
    }
    .faq-item.active { border-color: var(--blue-200); box-shadow: 0 4px 16px rgba(37,99,235,0.06); }
    .faq-question {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1.25rem 1.5rem;
      font-family: var(--font-display);
      font-size: 0.95rem;
      font-weight: 600;
      color: var(--gray-800);
      text-align: left;
      background: transparent;
      cursor: pointer;
    }
    .faq-question:hover { color: var(--blue-700); }
    .faq-icon {
      width: 28px; height: 28px; border-radius: 50%;
      background: var(--blue-50);
      display: flex; align-items: center; justify-content: center;
      flex-shrink: 0;
      transition: all 0.3s var(--ease);
    }
    .faq-item.active .faq-icon { background: var(--blue-600); color: var(--white); transform: rotate(45deg); }
    .faq-answer { max-height: 0; overflow: hidden; transition: max-height 0.4s var(--ease); }
    .faq-answer-inner { padding: 0 1.5rem 1.25rem; font-size: 0.9rem; color: var(--gray-500); line-height: 1.75; }

    /* FINAL CTA */
    .final-cta {
      padding: var(--section-pad) 0;
      background: linear-gradient(135deg, var(--gray-900) 0%, var(--blue-950) 100%);
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    .final-cta::before {
      content: '';
      position: absolute;
      top: -50%; left: -50%;
      width: 200%; height: 200%;
      background: radial-gradient(ellipse at 30% 50%, rgba(59,130,246,0.08) 0%, transparent 50%);
    }
    .final-cta .container { position: relative; z-index: 1; }
    .final-cta h2 { font-size: clamp(2rem, 4vw, 3rem); color: var(--white); margin-bottom: 1rem; letter-spacing: -0.02em; }
    .final-cta p { font-size: 1.1rem; color: var(--gray-400); max-width: 600px; margin: 0 auto 2.5rem; line-height: 1.7; }
    .final-cta-actions { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }

    /* STATS */
    .stats-bar { padding: 4rem 0; background: var(--gray-900); position: relative; overflow: hidden; }
    .stats-bar::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, rgba(37,99,235,0.1) 0%, transparent 50%, rgba(245,158,11,0.05) 100%);
    }
    .stats-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 2rem; position: relative; z-index: 1; }
    .stat-item { text-align: center; }
    .stat-number { font-family: var(--font-display); font-size: clamp(2.5rem, 4vw, 3.25rem); font-weight: 800; color: var(--white); line-height: 1; margin-bottom: 0.5rem; }
    .stat-number .accent { color: var(--blue-400); }
    .stat-label { font-size: 0.9rem; color: var(--gray-400); font-weight: 500; }

    /* PHILOSOPHY */
    .philosophy { padding: var(--section-pad) 0; background: var(--white); }

    /* RESPONSIVE */
    @media (max-width: 1024px) {
      .pricing-tiers { grid-template-columns: 1fr; max-width: 480px; margin: 0 auto; }
      .ai-grid { grid-template-columns: repeat(2, 1fr); }
    }
    @media (max-width: 900px) {
      .bundles-grid, .guarantees-grid, .testimonials-grid { grid-template-columns: 1fr; }
    }
    @media (max-width: 768px) {
      .stats-grid { grid-template-columns: repeat(2, 1fr); }
      .ai-grid { grid-template-columns: 1fr; }
      .faq-grid { grid-template-columns: 1fr; }
    }
    @media (max-width: 480px) {
      .pricing-hero-trust { flex-direction: column; gap: 0.75rem; }
    }
  </style>

  <!-- SECTION 1: HERO -->
  <section class="pricing-hero">
    <div class="container">
      <div class="pricing-hero-inner">
        <span class="section-label">Transparent Pricing</span>
        <h1>No Hidden Fees. <span class="highlight">No Surprises.</span></h1>
        <p>Every package is fixed-price. You know exactly what you're paying, what you're getting, and when you'll get it, before you sign anything.</p>
        <div class="pricing-hero-trust">
          <span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>
            Fixed-price projects
          </span>
          <span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>
            No lock-in contracts beyond 3 months
          </span>
          <span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>
            No hidden "setup fees"
          </span>
          <span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>
            GST invoices included
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 2: PRICING PHILOSOPHY -->
  <section class="philosophy reveal">
    <div class="container">
      <div class="section-header centered">
        <span class="section-label">Our Pricing Philosophy</span>
        <h2 class="section-title">How We Price Our Work</h2>
        <p class="section-subtitle">Three principles that guide every quote we send.</p>
      </div>
      <div class="ai-grid">
        <div class="ai-card">
          <div class="ai-card-icon">üéØ</div>
          <h3>Fixed Price, Not Hourly</h3>
          <p>Every project gets a fixed quote before we start. No tracking hours, no surprise invoices.</p>
        </div>
        <div class="ai-card">
          <div class="ai-card-icon">üìã</div>
          <h3>Scope Before Payment</h3>
          <p>Detailed proposal with exact deliverables, timeline, and price. You see everything first.</p>
        </div>
        <div class="ai-card">
          <div class="ai-card-icon">ü§ù</div>
          <h3>Pay in Milestones</h3>
          <p>Large projects are split into milestones. You pay as we deliver, not all upfront.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 3: SERVICE PRICING TABS -->
  <section class="pricing-tabs-section reveal">
    <div class="container">
      <div class="section-header centered" style="margin-bottom: 1.5rem;">
        <span class="section-label">Service Pricing</span>
        <h2 class="section-title">What Every Service Costs</h2>
        <p class="section-subtitle">Starting prices shown below. Exact pricing depends on your specific requirements.</p>
      </div>
      <div class="pricing-tabs">
        <button class="ptab active" data-tab="web-design">Web Design</button>
        <button class="ptab" data-tab="seo">SEO</button>
        <button class="ptab" data-tab="ppc">PPC / Ads</button>
        <button class="ptab" data-tab="ecommerce">E-commerce</button>
        <button class="ptab" data-tab="web-dev">Web Dev</button>
        <button class="ptab" data-tab="social">Social Media</button>
      </div>
    </div>
  </section>

  <section class="pricing-tiers-section reveal">
