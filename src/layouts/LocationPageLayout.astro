---
/**
 * LocationPageLayout.astro
 * ─────────────────────────────────────────────────────────────────────────────
 * Reusable 12-section layout for all DC technolabs location pages.
 * To build another city: copy ahmedabad.astro, rename, swap data arrays only.
 *
 * §1  Hero + Mini Form           badge, cityName, heroDesc, heroStats, formTitle, formSub
 * §2  Presence Overview          s2Label/Title, overviewParagraphs{p1,p2,p3}, overviewSvg
 * §3  Neighborhoods              s3*, neighborhoods[{name,types}]
 * §4  Local Challenges           s4*, challenges[{emoji,problem,solution}]
 * §5  Business Hubs (dark)       s5*, hubs[{tag,title,desc}]
 * §6  Why Local Trust            s6*, whyCards[{emoji,title,desc}]
 * §7  Stats Bar                  stats[{target,suffix,label}]
 * §8  Response Times             s8*, responseTimes[{time,title,desc}]
 * §9  Testimonials               s9*, testimonials[{text,initials,name,role}]
 * §10 FAQ                        s10*, faqItems[{q,a}]
 * §11 Map + Office               s11*, mapInfo{title,address,phone,email,hours,mapsEmbedSrc,directionsHref}
 * §12 Final CTA                  ctaTitle, ctaSubtitle
 */

export interface Neighborhood  { name: string; types: string }
export interface Challenge     { emoji: string; problem: string; solution: string }
export interface Hub           { tag: string; title: string; desc: string }
export interface WhyCard       { emoji: string; title: string; desc: string }
export interface Stat          { target: number; suffix: string; label: string }
export interface ResponseCard  { time: string; title: string; desc: string }
export interface Testimonial   { text: string; initials: string; name: string; role: string }
export interface FaqItem       { q: string; a: string }
export interface OverviewParagraphs { p1: string; p2: string; p3: string }
export interface MapInfo {
  title: string; address: string; phone: string; email: string;
  hours: string; mapsEmbedSrc: string; directionsHref: string;
}

interface Props {
  title: string; description: string; canonical: string; schemaJson: string;
  badge: string; cityName: string; heroDesc: string;
  heroStats: { value: string; label: string }[];
  formTitle: string; formSub: string;
  s2Label?: string; s2Title: string;
  overviewParagraphs: OverviewParagraphs; overviewSvg: string;
  s3Label?: string; s3Title: string; s3Subtitle?: string;
  neighborhoods: Neighborhood[];
  s4Label?: string; s4Title: string; s4Subtitle?: string;
  challenges: Challenge[];
  s5Label?: string; s5Title: string; s5Subtitle?: string;
  hubs: Hub[];
  s6Label?: string; s6Title: string; s6Subtitle?: string;
  whyCards: WhyCard[];
  stats: Stat[];
  s8Label?: string; s8Title: string; s8Subtitle?: string;
  responseTimes: ResponseCard[];
  s9Label?: string; s9Title: string;
  testimonials: Testimonial[];
  s10Label?: string; s10Title: string;
  faqItems: FaqItem[];
  s11Label?: string; s11Title: string;
  mapInfo: MapInfo;
  ctaTitle: string; ctaSubtitle: string;
}

const {
  title, description, canonical, schemaJson,
  badge, cityName, heroDesc, heroStats, formTitle, formSub,
  s2Label = "Our Local Presence", s2Title, overviewParagraphs, overviewSvg,
  s3Label = "Areas We Serve", s3Title, s3Subtitle = "We work with businesses across all major areas of the city.", neighborhoods,
  s4Label = "Local Challenges", s4Title, s4Subtitle = "Common digital challenges faced by businesses across the city.", challenges,
  s5Label = "Business Hubs", s5Title, s5Subtitle = "Tailored digital strategies for each major business corridor.", hubs,
  s6Label = "Why Local Businesses Trust Us", s6Title, s6Subtitle = "What makes working with a local agency different.", whyCards,
  stats,
  s8Label = "How Fast We Move", s8Title, s8Subtitle = "Being local means we're faster. Here's what to expect.", responseTimes,
  s9Label = "Client Reviews", s9Title, testimonials,
  s10Label = "FAQ", s10Title, faqItems,
  s11Label = "Find Us", s11Title, mapInfo,
  ctaTitle, ctaSubtitle,
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{title}</title>
<meta name="description" content={description}>
<meta property="og:title" content={title}>
<meta property="og:description" content={description}>
<meta property="og:type" content="website">
<meta property="og:url" content={canonical}>
<link rel="canonical" href={canonical}>
<link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32'%3E%3Crect width='32' height='32' rx='6' fill='%232563EB'/%3E%3Ctext x='50%25' y='55%25' text-anchor='middle' dominant-baseline='middle' font-family='system-ui' font-weight='800' font-size='14' fill='white'%3EDC%3C/text%3E%3C/svg%3E">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">
<script type="application/ld+json" set:html={schemaJson}></script>
<style>
:root{--blue-50:#EFF6FF;--blue-100:#DBEAFE;--blue-200:#BFDBFE;--blue-300:#93C5FD;--blue-400:#60A5FA;--blue-500:#3B82F6;--blue-600:#2563EB;--blue-700:#1D4ED8;--blue-800:#1E40AF;--blue-900:#1E3A5F;--blue-950:#0F1D35;--gray-50:#F8FAFC;--gray-100:#F1F5F9;--gray-200:#E2E8F0;--gray-300:#CBD5E1;--gray-400:#94A3B8;--gray-500:#64748B;--gray-600:#475569;--gray-700:#334155;--gray-800:#1E293B;--gray-900:#0F172A;--accent:#F59E0B;--accent-dark:#D97706;--success:#10B981;--white:#FFF;--black:#0A0A0A;--font-display:'Plus Jakarta Sans',sans-serif;--font-body:'DM Sans',sans-serif;--section-pad:clamp(4rem,8vw,7rem);--container:1200px;--radius:12px;--radius-lg:20px;--radius-full:9999px;--ease:cubic-bezier(.4,0,.2,1)}
*,*::before,*::after{margin:0;padding:0;box-sizing:border-box}
html{scroll-behavior:smooth;-webkit-font-smoothing:antialiased}
body{font-family:var(--font-body);color:var(--gray-800);background:var(--white);line-height:1.7;font-size:17px;overflow-x:hidden}
img{max-width:100%;height:auto;display:block}a{text-decoration:none;color:inherit;transition:all .3s var(--ease)}button{cursor:pointer;border:none;background:none;font-family:inherit}ul,ol{list-style:none}
.container{max-width:var(--container);margin:0 auto;padding:0 clamp(1.25rem,4vw,2rem)}
h1,h2,h3,h4,h5,h6{font-family:var(--font-display);font-weight:700;line-height:1.15;color:var(--gray-900)}
.section-label{display:inline-flex;align-items:center;gap:8px;font-family:var(--font-display);font-size:.85rem;font-weight:600;text-transform:uppercase;letter-spacing:.1em;color:var(--blue-600);margin-bottom:1rem}
.section-label::before{content:'';width:24px;height:2px;background:var(--blue-500);border-radius:2px}
.section-title{font-size:clamp(2rem,4vw,3rem);margin-bottom:1rem;letter-spacing:-.02em}
.section-subtitle{font-size:clamp(1.05rem,1.5vw,1.2rem);color:var(--gray-500);max-width:640px;line-height:1.7}
.section-header{margin-bottom:3.5rem}.section-header.centered{text-align:center}.section-header.centered .section-subtitle{margin:0 auto}
.btn{display:inline-flex;align-items:center;justify-content:center;gap:8px;padding:14px 32px;font-family:var(--font-display);font-size:.95rem;font-weight:600;border-radius:var(--radius-full);transition:all .3s var(--ease);white-space:nowrap}
.btn-primary{background:var(--blue-600);color:var(--white);box-shadow:0 4px 14px rgba(37,99,235,.35)}.btn-primary:hover{background:var(--blue-700);transform:translateY(-2px);box-shadow:0 8px 25px rgba(37,99,235,.4)}
.btn-secondary{background:var(--white);color:var(--blue-700);border:2px solid var(--blue-200)}.btn-secondary:hover{border-color:var(--blue-500);background:var(--blue-50);transform:translateY(-2px)}
.btn-accent{background:var(--accent);color:var(--black);box-shadow:0 4px 14px rgba(245,158,11,.35)}.btn-accent:hover{background:var(--accent-dark);transform:translateY(-2px)}
.btn-outline-light{border:2px solid rgba(255,255,255,.3);color:var(--white);background:transparent}.btn-outline-light:hover{border-color:rgba(255,255,255,.6);background:rgba(255,255,255,.08);transform:translateY(-2px)}
.btn-sm{padding:10px 24px;font-size:.9rem}
/* HEADER */
.header{position:fixed;top:0;left:0;right:0;z-index:1000;background:rgba(255,255,255,.92);backdrop-filter:blur(20px);-webkit-backdrop-filter:blur(20px);border-bottom:1px solid transparent;transition:all .3s var(--ease)}
.header.scrolled{border-bottom:1px solid var(--gray-200);box-shadow:0 1px 12px rgba(0,0,0,.06)}
.header-inner{display:flex;align-items:center;justify-content:space-between;height:72px}
.logo{display:flex;align-items:center;gap:10px;font-family:var(--font-display);font-weight:800;font-size:1.25rem;color:var(--gray-900)}
.logo-icon{width:38px;height:38px;background:linear-gradient(135deg,var(--blue-600),var(--blue-800));border-radius:10px;display:flex;align-items:center;justify-content:center;color:white;font-weight:800;font-size:.9rem;position:relative;overflow:hidden}
.logo-icon::after{content:'';position:absolute;top:-50%;left:-50%;width:200%;height:200%;background:linear-gradient(45deg,transparent 40%,rgba(255,255,255,.12) 50%,transparent 60%);animation:logoSheen 4s ease-in-out infinite}
@keyframes logoSheen{0%,100%{transform:translateX(-100%)}50%{transform:translateX(100%)}}
.logo span{color:var(--blue-600)}
.nav-desktop{display:flex;align-items:center;gap:2rem}.nav-desktop a{font-family:var(--font-display);font-size:.9rem;font-weight:500;color:var(--gray-600);position:relative;padding:4px 0}.nav-desktop a::after{content:'';position:absolute;bottom:-2px;left:0;width:0;height:2px;background:var(--blue-600);border-radius:2px;transition:width .3s var(--ease)}.nav-desktop a:hover{color:var(--blue-700)}.nav-desktop a:hover::after{width:100%}
.header-actions{display:flex;align-items:center;gap:12px}.header-phone{display:flex;align-items:center;gap:6px;font-family:var(--font-display);font-weight:600;font-size:.9rem;color:var(--gray-700)}.header-phone svg{color:var(--blue-600)}.header-phone:hover{color:var(--blue-600)}.btn-header-cta{padding:10px 24px;font-size:.9rem}
.menu-toggle{display:none;flex-direction:column;gap:5px;padding:8px;z-index:1001}.menu-toggle span{width:24px;height:2px;background:var(--gray-800);border-radius:2px;transition:all .3s var(--ease);transform-origin:center}.menu-toggle.active span:nth-child(1){transform:rotate(45deg) translate(5px,5px)}.menu-toggle.active span:nth-child(2){opacity:0}.menu-toggle.active span:nth-child(3){transform:rotate(-45deg) translate(5px,-5px)}
.mobile-menu{position:fixed;inset:0;background:var(--white);z-index:999;display:flex;flex-direction:column;justify-content:center;align-items:center;gap:1.5rem;opacity:0;visibility:hidden;transition:all .4s var(--ease)}.mobile-menu.active{opacity:1;visibility:visible}.mobile-menu a{font-family:var(--font-display);font-size:1.75rem;font-weight:700;color:var(--gray-900);opacity:0;transform:translateY(20px);transition:all .3s var(--ease)}.mobile-menu.active a{opacity:1;transform:translateY(0)}.mobile-menu.active a:nth-child(1){transition-delay:.1s}.mobile-menu.active a:nth-child(2){transition-delay:.15s}.mobile-menu.active a:nth-child(3){transition-delay:.2s}.mobile-menu.active a:nth-child(4){transition-delay:.25s}.mobile-menu.active a:nth-child(5){transition-delay:.3s}.mobile-menu a:hover{color:var(--blue-600)}.mobile-menu-cta{margin-top:2rem;opacity:0;transform:translateY(20px);transition:all .3s var(--ease) .4s}.mobile-menu.active .mobile-menu-cta{opacity:1;transform:translateY(0)}
@keyframes fadeInUp{from{opacity:0;transform:translateY(24px)}to{opacity:1;transform:translateY(0)}}
.reveal{opacity:0;transform:translateY(30px);transition:all .7s var(--ease)}.reveal.visible{opacity:1;transform:translateY(0)}

/* §1 HERO */
.loc-hero{padding:120px 0 clamp(3rem,6vw,5rem);background:linear-gradient(170deg,var(--white) 0%,var(--blue-50) 50%,var(--white) 100%);position:relative;overflow:hidden}
.loc-hero::before{content:'';position:absolute;top:-200px;right:-200px;width:600px;height:600px;background:radial-gradient(circle,rgba(59,130,246,.06) 0%,transparent 70%);border-radius:50%}
.loc-hero-grid{display:grid;grid-template-columns:1fr 400px;gap:3.5rem;align-items:center;position:relative;z-index:1}
.loc-hero-badge{display:inline-flex;align-items:center;gap:8px;padding:6px 16px;background:var(--blue-50);border:1px solid var(--blue-200);border-radius:var(--radius-full);font-family:var(--font-display);font-size:.9rem;font-weight:600;color:var(--blue-700);margin-bottom:1.25rem}
.loc-hero h1{font-size:clamp(2.25rem,4.5vw,3.25rem);letter-spacing:-.03em;line-height:1.1;margin-bottom:1rem}
.loc-hero h1 .highlight{background:linear-gradient(135deg,var(--blue-600),var(--blue-400));-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text}
.loc-hero-desc{font-size:1.1rem;color:var(--gray-500);line-height:1.75;margin-bottom:1.5rem;max-width:540px}
.loc-hero-stats{display:flex;gap:2rem}.loc-hero-stat strong{font-family:var(--font-display);font-size:1.5rem;font-weight:800;color:var(--gray-900);display:block}.loc-hero-stat span{font-size:.9rem;color:var(--gray-400)}
.hero-form-card{background:var(--white);border-radius:var(--radius-lg);padding:2rem;box-shadow:0 20px 60px rgba(0,0,0,.08),0 1px 3px rgba(0,0,0,.05);border:1px solid var(--gray-100)}
.hero-form-title{font-family:var(--font-display);font-size:1.2rem;font-weight:700;margin-bottom:.25rem;color:var(--gray-900)}.hero-form-sub{font-size:.9rem;color:var(--gray-400);margin-bottom:1.5rem}
.form-group{margin-bottom:1rem}.form-group label{display:block;font-family:var(--font-display);font-size:.85rem;font-weight:600;color:var(--gray-600);margin-bottom:6px}
.form-input{width:100%;padding:12px 16px;border:1.5px solid var(--gray-200);border-radius:var(--radius);font-family:var(--font-body);font-size:.95rem;color:var(--gray-800);transition:all .2s var(--ease);background:var(--gray-50)}.form-input:focus{outline:none;border-color:var(--blue-500);background:var(--white);box-shadow:0 0 0 3px rgba(59,130,246,.1)}.form-input::placeholder{color:var(--gray-400)}textarea.form-input{resize:vertical;min-height:80px}
.form-submit{width:100%;padding:14px;margin-top:.5rem;display:flex;align-items:center;justify-content:center;gap:8px}

/* §2 OVERVIEW */
.loc-overview{padding:var(--section-pad) 0}
.loc-overview-grid{display:grid;grid-template-columns:1fr 1fr;gap:4rem;align-items:center}
.loc-overview-content .section-label{margin-bottom:.75rem}.loc-overview-content .section-title{margin-bottom:1.5rem}
.loc-overview-content p{font-size:1rem;color:var(--gray-600);line-height:1.8;margin-bottom:1.25rem}
.loc-overview-visual{background:linear-gradient(135deg,var(--blue-50),var(--blue-100));border-radius:var(--radius-lg);padding:3rem;min-height:320px;display:flex;align-items:center;justify-content:center}
.loc-overview-visual svg{width:100%;max-width:300px}

/* §3 NEIGHBORHOODS */
.neighborhoods{padding:var(--section-pad) 0;background:var(--blue-50)}
.neighborhoods-grid{display:grid;grid-template-columns:repeat(4,1fr);gap:1.25rem}
.neighborhood-card{background:var(--white);border-radius:var(--radius-lg);padding:1.75rem;border:1px solid var(--blue-100);transition:all .3s var(--ease);text-align:center}
.neighborhood-card:hover{transform:translateY(-4px);box-shadow:0 12px 36px rgba(0,0,0,.06);border-color:var(--blue-300)}
.neighborhood-card h3{font-size:1.05rem;margin-bottom:.35rem}.neighborhood-card p{font-size:.9rem;color:var(--gray-500)}

/* §4 CHALLENGES */
.challenges{padding:var(--section-pad) 0}
.challenges-grid{display:grid;grid-template-columns:repeat(2,1fr);gap:1.5rem}
.challenge-card{padding:2rem;border-radius:var(--radius-lg);border:1.5px solid var(--gray-100);background:var(--white);transition:all .3s var(--ease)}.challenge-card:hover{border-color:var(--blue-200);transform:translateY(-4px);box-shadow:0 12px 36px rgba(0,0,0,.06)}
.challenge-card h3{font-size:1.1rem;margin-bottom:.6rem}.challenge-card p{font-size:.95rem;color:var(--gray-500);line-height:1.7}

/* §5 HUBS (DARK) */
.hubs{padding:var(--section-pad) 0;background:var(--gray-900);color:var(--white)}
.hubs .section-label{color:var(--blue-300)}.hubs .section-label::before{background:var(--blue-400)}.hubs .section-title{color:var(--white)}.hubs .section-subtitle{color:var(--gray-400)}
.hubs-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:1.5rem}
.hub-card{background:rgba(255,255,255,.05);border:1px solid rgba(255,255,255,.08);border-radius:var(--radius-lg);padding:2rem;transition:all .3s var(--ease)}.hub-card:hover{border-color:rgba(255,255,255,.15);background:rgba(255,255,255,.08)}
.hub-card-tag{display:inline-block;padding:4px 12px;background:rgba(59,130,246,.15);color:var(--blue-300);border-radius:var(--radius-full);font-family:var(--font-display);font-size:.8rem;font-weight:600;margin-bottom:1rem}
.hub-card h3{font-size:1.1rem;color:var(--white);margin-bottom:.5rem}.hub-card p{font-size:.95rem;color:var(--gray-400);line-height:1.7}

/* §6 WHY US */
.why-us{padding:var(--section-pad) 0;background:var(--blue-50)}
.why-us-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:2rem}
.why-card{background:var(--white);border-radius:var(--radius-lg);padding:2.25rem;border:1px solid var(--blue-100);transition:all .3s var(--ease)}.why-card:hover{transform:translateY(-4px);box-shadow:0 16px 48px rgba(0,0,0,.06)}
.why-card-icon{width:48px;height:48px;border-radius:12px;background:var(--blue-100);display:flex;align-items:center;justify-content:center;margin-bottom:1.25rem;font-size:1.3rem}
.why-card h3{font-size:1.1rem;margin-bottom:.6rem}.why-card p{font-size:.9rem;color:var(--gray-500);line-height:1.7}

/* §7 STATS BAR */
.stats-bar{padding:4rem 0;background:var(--gray-900);position:relative;overflow:hidden}
.stats-bar::before{content:'';position:absolute;inset:0;background:linear-gradient(135deg,rgba(37,99,235,.1) 0%,transparent 50%,rgba(245,158,11,.05) 100%)}
.stats-grid{display:grid;grid-template-columns:repeat(4,1fr);gap:2rem;position:relative;z-index:1}
.stat-item{text-align:center}.stat-number{font-family:var(--font-display);font-size:clamp(2.5rem,4vw,3.25rem);font-weight:800;color:var(--white);line-height:1;margin-bottom:.5rem}.stat-number .accent{color:var(--blue-400)}.stat-label{font-size:.9rem;color:var(--gray-400);font-weight:500}

/* §8 RESPONSE TIMES */
.response-times{padding:var(--section-pad) 0;background:var(--blue-50)}
.response-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:1.5rem}
.response-card{background:var(--white);border-radius:var(--radius-lg);padding:2rem;border:1px solid var(--blue-100);text-align:center;transition:all .3s var(--ease)}.response-card:hover{transform:translateY(-4px);box-shadow:0 12px 36px rgba(0,0,0,.06)}
.response-card-time{font-family:var(--font-display);font-size:2rem;font-weight:800;color:var(--blue-600);margin-bottom:.5rem}.response-card h3{font-size:1.05rem;margin-bottom:.35rem}.response-card p{font-size:.9rem;color:var(--gray-500)}

/* §9 TESTIMONIALS */
.testimonials{padding:var(--section-pad) 0}
.testimonials-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:1.5rem}
.testimonial-card{background:var(--gray-50);border-radius:var(--radius-lg);padding:2rem;border:1px solid var(--gray-100);transition:all .3s var(--ease)}.testimonial-card:hover{border-color:var(--blue-200);box-shadow:0 8px 30px rgba(0,0,0,.05)}
.testimonial-stars{display:flex;gap:2px;margin-bottom:1rem;color:var(--accent)}
.testimonial-text{font-size:.95rem;color:var(--gray-600);line-height:1.75;margin-bottom:1.5rem;font-style:italic}
.testimonial-author{display:flex;align-items:center;gap:12px}.testimonial-avatar{width:44px;height:44px;border-radius:50%;background:linear-gradient(135deg,var(--blue-200),var(--blue-400));display:flex;align-items:center;justify-content:center;font-family:var(--font-display);font-weight:700;font-size:.9rem;color:var(--white);flex-shrink:0}
.testimonial-name{font-family:var(--font-display);font-weight:700;font-size:.9rem;color:var(--gray-900)}.testimonial-role{font-size:.85rem;color:var(--gray-400)}

/* §10 FAQ */
.faq{padding:var(--section-pad) 0;background:var(--gray-50)}
.faq-grid{display:grid;grid-template-columns:1fr 1fr;gap:1rem;max-width:960px;margin:0 auto}
.faq-item{border:1.5px solid var(--gray-100);border-radius:var(--radius);overflow:hidden;transition:all .3s var(--ease)}.faq-item.active{border-color:var(--blue-200);box-shadow:0 4px 16px rgba(37,99,235,.06)}
.faq-question{width:100%;display:flex;align-items:center;justify-content:space-between;padding:1.25rem 1.5rem;font-family:var(--font-display);font-size:.95rem;font-weight:600;color:var(--gray-800);text-align:left;background:transparent;cursor:pointer}.faq-question:hover{color:var(--blue-700)}
.faq-icon{width:28px;height:28px;border-radius:50%;background:var(--blue-50);display:flex;align-items:center;justify-content:center;flex-shrink:0;transition:all .3s var(--ease)}.faq-item.active .faq-icon{background:var(--blue-600);color:var(--white);transform:rotate(45deg)}
.faq-answer{max-height:0;overflow:hidden;transition:max-height .4s var(--ease)}.faq-answer-inner{padding:0 1.5rem 1.25rem;font-size:.9rem;color:var(--gray-500);line-height:1.75}

/* §11 MAP */
.loc-map{padding:var(--section-pad) 0}
.loc-map-grid{display:grid;grid-template-columns:1fr 1fr;gap:3rem;align-items:center}
.loc-map-frame{border-radius:var(--radius-lg);overflow:hidden;height:400px;border:1px solid var(--gray-200)}.loc-map-frame iframe{width:100%;height:100%;border:0}
.loc-map-info h3{font-size:1.3rem;margin-bottom:1.5rem}
.loc-map-detail{display:flex;align-items:flex-start;gap:12px;margin-bottom:1.25rem}.loc-map-detail svg{color:var(--blue-600);flex-shrink:0;margin-top:3px}.loc-map-detail p{font-size:.95rem;color:var(--gray-600);line-height:1.6}.loc-map-detail strong{display:block;font-family:var(--font-display);color:var(--gray-800);margin-bottom:2px}.loc-map-detail a{color:var(--blue-600)}
.loc-map-btns{margin-top:1.5rem;display:flex;gap:1rem;flex-wrap:wrap}

/* §12 CTA */
.final-cta{padding:var(--section-pad) 0;background:linear-gradient(135deg,var(--gray-900) 0%,var(--blue-950) 100%);text-align:center;position:relative;overflow:hidden}
.final-cta::before{content:'';position:absolute;top:-50%;left:-50%;width:200%;height:200%;background:radial-gradient(ellipse at 30% 50%,rgba(59,130,246,.08) 0%,transparent 50%)}
.final-cta .container{position:relative;z-index:1}.final-cta h2{font-size:clamp(2rem,4vw,3rem);color:var(--white);margin-bottom:1rem;letter-spacing:-.02em}.final-cta p{font-size:1.1rem;color:var(--gray-400);max-width:600px;margin:0 auto 2.5rem;line-height:1.7}.final-cta-actions{display:flex;gap:1rem;justify-content:center;flex-wrap:wrap}

/* FOOTER */
.footer{background:var(--gray-900);color:var(--gray-400)}.footer-top{padding:4rem 0 3rem;border-bottom:1px solid rgba(255,255,255,.08)}.footer-grid{display:grid;grid-template-columns:1.5fr 1fr 1fr 1fr 1fr;gap:2.5rem}.footer-brand-logo{display:flex;align-items:center;gap:10px;font-family:var(--font-display);font-weight:800;font-size:1.25rem;color:var(--white);margin-bottom:1rem}.footer-brand p{font-size:.95rem;line-height:1.7;margin-bottom:1.5rem;max-width:280px}.footer-socials{display:flex;gap:10px}.footer-social{width:36px;height:36px;border-radius:8px;border:1px solid rgba(255,255,255,.12);display:flex;align-items:center;justify-content:center;color:var(--gray-400);transition:all .3s var(--ease)}.footer-social:hover{border-color:rgba(255,255,255,.3);color:var(--white)}.footer-col h4{font-family:var(--font-display);font-size:.9rem;font-weight:700;color:var(--white);text-transform:uppercase;letter-spacing:.08em;margin-bottom:1.25rem}.footer-col a{display:block;font-size:.9rem;color:var(--gray-400);padding:4px 0}.footer-col a:hover{color:var(--blue-400)}.footer-mid{padding:2rem 0;border-bottom:1px solid rgba(255,255,255,.08)}.footer-mid-inner{display:flex;align-items:center;justify-content:space-between;flex-wrap:wrap;gap:1.5rem;font-size:.95rem}.footer-contact-item{display:flex;align-items:center;gap:10px}.footer-contact-item a{color:var(--gray-300)}.footer-contact-item a:hover{color:var(--blue-400)}.footer-bottom{padding:1.5rem 0}.footer-bottom-inner{display:flex;align-items:center;justify-content:space-between;font-size:.9rem;flex-wrap:wrap;gap:1rem}.footer-bottom a{color:var(--gray-400)}.footer-bottom a:hover{color:var(--blue-400)}

/* FLOATING */
.mobile-call-btn{display:none;position:fixed;bottom:20px;right:20px;width:60px;height:60px;border-radius:50%;background:var(--blue-600);color:var(--white);align-items:center;justify-content:center;box-shadow:0 8px 24px rgba(37,99,235,.4);z-index:900;animation:pulse 2.5s infinite}
@keyframes pulse{0%{box-shadow:0 0 0 0 rgba(37,99,235,.4)}70%{box-shadow:0 0 0 15px rgba(37,99,235,0)}100%{box-shadow:0 0 0 0 rgba(37,99,235,0)}}
