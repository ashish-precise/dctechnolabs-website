---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import MobileCallButton from '../components/MobileCallButton.astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
}

const { title, description, canonical, ogImage } = Astro.props;
---

<BaseLayout title={title} description={description} canonical={canonical} ogImage={ogImage}>
  <Header />
  
  <!-- Page Content -->
  <slot />
  
  <Footer />
  
  <!-- Floating Buttons -->
  <WhatsAppButton />
  <MobileCallButton />
</BaseLayout>
