 */

export interface FeatureCard {
  iconPath: string;   // SVG path(s) as HTML string
  title: string;
  desc: string;
}

export interface ProblemCard {
  problem: string;   // quoted problem text e.g. "My site looks outdated"
  solution: string;
}

export interface ProcessStep {
  title: string;
  desc: string;
}

export interface Deliverable {
  title: string;
  desc: string;
}

export interface ComparisonRow {
  feature: string;
  us: string;          // text for DC technolabs column
  usClass?: string;    // "check" | "cross" | "" (default "check")
  agency: string;
  agencyClass?: string;
  freelancer: string;
  freelancerClass?: string;
}

export interface PricingFeature { text: string }

export interface PricingTier {
  name: string;
  desc: string;
  price: string;
  priceSuffix: string;
  note: string;
  features: string[];
  btnLabel: string;
  btnClass: string;   // "btn-secondary" | "btn-primary"
  featured?: boolean;
}

export interface PortfolioCard {
  thumbBg: string;     // inline CSS gradient
  thumbSvg: string;    // SVG HTML string
  tag: string;
  title: string;
  desc: string;
}

export interface Testimonial {
  text: string;
  initials: string;
  name: string;
  role: string;
}

export interface FaqItem {
  q: string;
  a: string;
}

export interface RelatedService {
  href: string;
  title: string;
  desc: string;
}

