  // SEO
  title: string;
  description: string;
  canonical: string;
  schemaJson: string;

  // Hero
  badge: string;
  heroH1: string;
  heroHighlight: string;
  heroDesc: string;
  heroStats: { value: string; label: string }[];
  formTitle: string;
  formSub: string;
  formTypeLabel?: string;
  formTypeOptions: string[];

  // Section labels/titles/subtitles
  s2Label?: string; s2Title: string; s2Subtitle?: string;
  s3Label?: string; s3Title: string; s3Subtitle?: string;
  s4Label?: string; s4Title: string; s4Subtitle?: string;
  s5Label?: string; s5Title: string; s5Subtitle?: string;
  s6Label?: string; s6Title: string; s6Subtitle?: string;
