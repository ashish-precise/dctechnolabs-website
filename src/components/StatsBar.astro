---
// StatsBar.astro — Reusable animated stats counter bar
// Usage: <StatsBar /> — no props needed, stats are fixed brand values
---

<section class="stats-bar reveal">
  <div class="container">
    <div class="stats-grid">
      <div class="stat-item">
        <div class="stat-number"><span class="counter" data-target="945">0</span><span class="accent">+</span></div>
        <div class="stat-label">Projects Completed</div>
      </div>
      <div class="stat-item">
        <div class="stat-number"><span class="counter" data-target="8">0</span><span class="accent">+</span></div>
        <div class="stat-label">Years of Experience</div>
      </div>
      <div class="stat-item">
        <div class="stat-number"><span class="counter" data-target="100">0</span><span class="accent">+</span></div>
        <div class="stat-label">Clutch Awards</div>
      </div>
      <div class="stat-item">
        <div class="stat-number"><span class="counter" data-target="20">0</span><span class="accent">+</span></div>
        <div class="stat-label">Team Members</div>
      </div>
    </div>
  </div>
</section>
